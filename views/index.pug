extends layout

block content

  if user
    h1 Welcome #{user.username}!

    div.divmargin
      a(href="/logout") Log out

    div.divmargin
      a(href="/create") Create new message

    div.divmargin
      a(href="/account") Enter secret member key
  

    div
      posts_list
      each message in posts_list
        div.board_message
          p #{message.timestamp}
          p #{message.author.username}, #{message.author.first_name} #{message.author.last_name}
          h3 #{message.title}
          p #{message.message}
          
          

  else
    h1 Welcome Guest!

    div.divmargin
      a(href="/signup") Sign Up here
    div.divmargin
      a(href="/login") Log In here
    
    div
      posts_list
      each message in posts_list
        div.board_message
          p #{message.timestamp}
          h3 #{message.title}
          p #{message.message}