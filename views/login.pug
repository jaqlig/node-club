extends layout

block content
    a.return(href="../") return to main page

    h1 Log In

    if user
        
        p You are logged in
        a(href="/logout") Log out?

    else

        form(method="POST" action="login")
            div.form_div
                input(name="username" placeholder="username" type="text" value=(undefined===username ? '' : username))
            
            div.form_div
                input(name="password" placeholder="password" type="password")

            button Log In

    p= msg